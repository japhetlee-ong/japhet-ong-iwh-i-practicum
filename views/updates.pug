      p.subtitle Please fill out the applicant information
      if message
        p(style="color: green; font-weight: bold; text-align: center;")= message
      
      form(action="/submit-applicant" method="POST")
        .form-group
          label(for="name") Full Name
          input(type="text" id="name" name="name" placeholder="Enter full name" required)
        
        .form-group
          label(for="educational_attainment") Educational Attainment
          input(type="text" id="educational_attainment" name="educational_attainment" placeholder="Enter educational attainment" required)
        
        .form-group
          label(for="current_job") Current Job
          input(type="text" id="current_job" name="current_job" placeholder="Enter current job" required)
        
        button(type="submit") Submit Applicant
      
      .link
